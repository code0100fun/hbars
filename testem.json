{
  "framework": "mocha+chai",
  "test_page": "dist/tests/index.html",
  "src_files": [
    "lib/**/*.js",
    "tests/**/*.js"
  ],
  "launchers": {
    "node": {
      "command": "npm run build  && ./node_modules/.bin/mocha -r dist/tests/setup_cjs.js -R tap dist/tests/*test.js dist/**/*.jshint.js",
      "protocol": "tap"
    }
  },
  "launch_in_ci": ["node", "PhantomJS"],
  "launch_in_dev": [
    "node",
    "PhantomJS",
    "Chrome"
  ]
}
